<header class="header">
	<div>
		{{> logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<main class="main">
	<div class="main_content">
		<div class="main_heading">{{heading}}</div>
		<div class="main_description">{{description}}</div>
		<a href="{{href}}" class="button main_button">{{button}}</a>
	</div>

	<img src="{{image}}" alt="Main image" class="main_image">
</main>
{{/with}}

<div class="featured">
	{{#each featured}}
	{{> featuredBlog data=this}}
	{{/each}}
</div>

<div class="actions">
	{{#each actions}}
	<div class="actions_content">
		<div class="actions_heading">{{heading}}</div>
		<a href="{{url}}" class="button actions_text">{{text}}</a>
	</div>
	{{/each}}
</div>

<footer class="footer">
	<div>
		{{> logo }}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>